@{
    ViewData["Title"] = "Donors";
}

<div>
    <h3 class="text-center pb-1">CRUD the elements</h3>

    <hr/>

    <h4>Donors</h4>
    <div class="container">
        <form method="post">
            <fieldset>
                <legend>Add a Donor</legend>
                <table class="table w-50">
                    <tr>
                        <td>
                            <label for="DonorName">Name: </label>
                            <input type="text" name="DonorName" value=""/>
                            @Html.ValidationMessage("donorname")
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td>
                                        <label for="IsCompany">Is a company? </label>
                                    </td>
                                    <td>
                                        <label class="container">Yes
                                            <input type="radio" checked="checked" name="companyRadio">
                                            <span class="checkmark"></span>
                                        </label>
                                        <label class="container">&nbsp;No
                                            <input type="radio" name="companyRadio">
                                            <span class="checkmark"></span>
                                        </label>
                                        @Html.ValidationMessage("isCompany")
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </form>
    </div>
    <hr/>
    <h4>Receivers</h4>
    <hr/>
    <h4>Food</h4>
    <hr/>

    <p class="text-center">
        The code and full description are available on GitHub:
        <a href="https://github.com/raphaelcordon/FiapChallengeCleanArchitecture" target="_blank">
            <i>link here</i>
        </a>
    </p>
    <hr/>
</div>