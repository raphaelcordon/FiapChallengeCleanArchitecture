<div>
    <h3 class="text-center pb-1">D O N O R</h3>
    <hr/>

    <div class="container">
        <form asp-controller="Donor" asp-action="DonorNew" method="post">
            <fieldset>
                <legend>Add/Edit Donor</legend>
                <table class="table w-50">
                    <tr>
                        <td>
                            <label for="Name">Name: </label>
                            <input type="text" id="Name" name="Name" required/>
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td>
                                        <label for="IsCompany">Is a company? </label>
                                    </td>
                                    <td>
                                        <label class="container">
                                            Yes
                                            <input type="radio" id="IsCompany" name="IsCompany" value="true" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                        <label class="container">
                                            &nbsp;No
                                            <input type="radio" name="IsCompany" value="false">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            @Html.AntiForgeryToken()
                            <input type="submit" value=" - S A V E - " class="btn btn-secondary" style="width: 100%;"/>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </form>
    </div>
    <hr/>
</div>